@model PVT.Domain.Models.Usuario

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no">
    <title>Plataforma de Videos Tutoriais</title>
    <link rel="icon" type="image/x-icon" href="~/assets/img/logoCAHorzBranco.png" />
    <!-- BEGIN GLOBAL MANDATORY STYLES -->
    <link href="~/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/assets/css/plugins.css" rel="stylesheet" />
    <link href="~/assets/css/authentication/form-1.css" rel="stylesheet" />


    <!-- END GLOBAL MANDATORY STYLES -->
    <!--<link href="~/css/theme-checkbox-radio.css" rel="stylesheet" />
    <link href="~/css/switches.css" rel="stylesheet" />-->

    <style>

        .form-form .form-form-wrap form .field-wrapper svg {
            color: gray !important;
        }

        .form-form .form-container .h2 {
            text-align: center;
        }

        .form-form .form-form-wrap h1 .brand-name {
            /*            color: #fcfcfc !important;*/
        }

        .form-image .l-image {
            opacity: 0.8;
            background: linear-gradient(to left, rgba(252, 252, 252, 0) 0%, rgba(252, 252, 252, 0.5) 79%, rgba(252, 252, 252, 1) 97%), url(/assets/img/crop-man-studying-near-laptop.jpg);
            background-size: 1200px 800px;
            background-repeat: no-repeat;
            background-size: cover;
            /*background: linear-gradient(to left, rgba(252, 252, 252, 0) 0%, rgba(252, 252, 252, 0.5) 79%, rgba(252, 252, 252, 1) 97%), #808080;*/
        }

        .form-form .form-form-wrap form .field-wrapper svg {
            fill: rgba(255, 255, 255, 1);
        }

        .form-form .form-form-wrap form .field-wrapper input {
            font-size: 14px !important;
        }

        body {
            background: #fcfcfc !important;
        }

        .form-form .form-form-wrap form .field-wrapper input {
            background: #fcfcfc !important;
        }



        @@media (min-width: 991px) {
            .form-form {
                width: 30%;
                /*border-right : 2px solid gray;*/
            }

            .form-image {
                width: 70%;
            }
        }
    </style>
</head>
<body class="form">
    <div class="form-container">
        <div class="form-form">
            <div class="form-form-wrap">
                <div class="form-container">
                    <div class="form-content">

                        <h3 class="h3 text-center">Plataforma de Videos <a href="index.html"><span class="brand-name text-primary" style="font-weight:700">Tutoriais</span></a></h3>
                        <br />
                        <form class="text-left  mt-5" asp-controller="Login" asp-action="Login" method="post">
                            <div class="form">

                                <div id="username-field" class="field-wrapper input">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="Grey" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>

                                    <input id="username" name="Login" type="text" class="form-control form-group-sm" placeholder="Usuario">
                                </div>

                                <span class="input-group mb-3" asp-validation-for="@Model.Login" style='color: red; font-weight:600; padding-top: 8px!important;'></span>

                                <div id="password-field" class="field-wrapper input mb-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="Grey" stroke="Grey" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-lock"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>

                                    <input id="password" name="Password" type="password" class="form-control form-group-sm" placeholder="Senha">
                                </div>

                                <span class="input-group mb-3" style='color: red; font-weight:600; padding-top: 8px!important;' asp-validation-for="@Model.Password"></span>

                                <br />
                                <div style="color: red; padding-top: 8px!important;font-weight:600;" id="errormessage">

                                </div>
                                <br />
                                <div class="d-sm-flex justify-content-between">
                                    <div class="field-wrapper toggle-pass">
                                        <p class="d-inline-block">Mostar Senha</p>
                                        <label class="switch s-primary">
                                            <input type="checkbox" id="toggle-password" class="d-none">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                    <div class="field-wrapper">
                                        <button type="submit" class="btn btn-primary btn-sm">Logar</button>
                                    </div>

                                </div>

                                <br />

                                <div class="field-wrapper">
                                    <a href="http://controleusuario.cruzazul.com.br/RecuperarSenha/Index" class="forgot-pass-link">Esqueceu a senha ?</a>
                                </div>

                            </div>
                        </form>


                        <p class="terms-conditions">©@DateTime.Now.Year Todos os Direitos Reservados. </p>

                    </div>
                </div>
            </div>
        </div>
        <div class="form-image">
            <div class="l-image">
            </div>
        </div>
    </div>


    begin global mandatory scripts
    <script src="~/jquery/dist/jquery.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>


    begin global mandatory scripts
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>

    end global mandatory scripts
    <script src="~/js/form-1.js"></script>

    <script>

        var a = location.href;
        var msg = document.getElementById("errormessage");

        if (a.includes("persist=true")) {
            msg.innerHTML = "<span> Usuario ou Senha Invalidos </span>";
        }
        if (a.includes("auth=true")) {
            msg.innerHTML = "<span>Não há aplicativos vinculado ao usuario</span><br />";
        }
        if (a.includes("error=true")) {
            msg.innerHTML = "<span>Servidor Indisponivel.</span>";

        } if (a.includes("usuarioInexistente=true")) {
            msg.innerHTML = "<span>Usuario não Cadastrado.</span>";
        }


    </script>


</body>
</html>
