@{
    ViewBag.Title = "Cursos";
}

<style>
</style>
<div ng-controller="curso as ctrl">

    <div class="page-header justify-content">
        <h3>@ViewBag.Title</h3>
        <div class="col-md-7 mb-3 text-right">
            <button id="btnPrimaryDanger" class="btn btn-primary btn-sm" ng-click="AbrirCadastroNovo()">Novo Curso</button>
        </div>
    </div>
    @* Listagem dos Meus Cursos *@
    <div class="row layout-top-spacing" ng-init="Listagem()">
        <div class="container-fluid">
            <div class="card">
                <table id="DtResult" datatable="ng" dt-options="dtOptions"
                       class="table table-hover dataTable"
                       role="grid">
                    <thead>
                        <tr>
                            <th class="text-center" style="width:5%">Id</th>
                            <th class="text-center">Curso</th>
                            <th class="text-center">Disciplinas</th>
                            <th class="text-center">Descrição</th>
                            <th class="text-center">Prioridade</th>
                            <th class="text-center">Modulo</th>
                            <th class="text-center" style="width:5%">Status</th>
                            <th class="text-center">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in Tabela">
                            <td class="text-center">{{item.ID}}</td>
                            <td class="text-center">{{item.NOME}}</td>
                            <td class="text-center">{{item.QTD_DISCIPLINAS}}</td>
                            <td class="text-center">{{item.DESCRICAO}}</td>
                            <td class="text-center">{{item.PRIORIDADE}}</td>
                            <td class="text-center">{{item.NOME_MODULO}}</td>
                            <td class="text-center">
                                <button id="btnStatus"
                                        type="button"
                                        title="Alterar Status"
                                        ng-class="botaoClass(item.STATUS)"
                                        ng-click="DesativarCurso(item)">
                                    <i class="fas fa-check" ng-show="item.STATUS"></i>
                                    <i class="fas fa-times" ng-show="!item.STATUS"></i>
                                </button>
                            </td>
                            <td class="text-center">
                                <button id="btnPrimaryDanger"
                                        type="button"
                                        class="btn btn-warning btn-sm"
                                        title="Adicionar Conteúdo"
                                        ng-click="AbrirGerenciarCurso(item)">
                                    <i class="fas fa-cogs"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @* Modal cadastrar novo Curso *@
    <div class="modal fade" id="ModalRegistro" tabindex="-1" role="dialog" aria-labelledby="ModalRegistroLabel" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">{{tituloModal}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                
                <form name="cadastrarCursoForm"  autocomplete="off">
                    <div class="modal-body">                  
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Modulo:</label>
                                    <select class="form-control" ng-model="curso.ID_MODULO" ng-change="trocarPrioridade(curso)" ng-options="item.ID as item.NOME for item in Modulos" ng-required="true">
                                        <option value="">Selecione um Modulo</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-8" ng-show="curso.ID_MODULO != null">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Curso:</label>
                                    <input type="text" class="form-control" name="nomeCurso" id="recipient-name" placeholder="insira um nome do curso"
                                           ng-model="curso.NOME" required>
                                    <div ng-show="!curso.NOME && cadastrarCursoForm.nomeCurso.$dirty && cadastrarCursoForm.nomeCurso.$touched" class="alert alert-danger">
                                        Este campo é obrigatório!
                                    </div>
                                    <div ng-show="curso.NOME.length < 3" class="alert alert-danger">
                                        Mínimo 3 caracteres!
                                    </div>
                                </div>
                            </div>
                            <div class="col-4" ng-show="curso.ID_MODULO != null">
                                <div class="form-group">
                                    <label for="recipient-name" class="col-form-label">Prioridade:</label>
                                    <input type="number" class="form-control" id="recipient-name" name="prioridadeCurso" ng-model="curso.PRIORIDADE" required>
                                    <div ng-show="!curso.PRIORIDADE && cadastrarCursoForm.prioridadeCurso.$touched && cadastrarCursoForm.prioridadeCurso.$dirty" class="alert alert-danger">
                                        Campo obrigatório!
                                    </div>
                                    <div ng-show="curso.PRIORIDADE <= 0" class="alert alert-danger">
                                        Valor precisa ser maior que 0!
                                    </div>
                                </div>
                            </div>
                            <div class="col-12" ng-show="curso.ID_MODULO != null">
                                <div class="form-group">
                                    <label for="message-text" class="col-form-label">Descrição:</label>
                                    <textarea class="form-control" id="message-text" name="descricaoCurso" ng-model="curso.DESCRICAO" ng-required="true" ng-minlength="10"></textarea>
                                    <div ng-show="cadastrarCursoForm.descricaoCurso.$error.required && cadastrarCursoForm.descricaoCurso.$dirty" class="alert alert-danger">
                                        Campo obrigatório!
                                    </div>
                                    <div ng-show="cadastrarCursoForm.descricaoCurso.$error.minlength" class="alert alert-danger">
                                        Este campo precisa de no mínimo 10 caracteres
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button id="btnPrimaryDanger" type="button" class="btn btn-danger btn-sm" ng-click="FechaModal('ModalRegistro')">Fechar</button>
                        <button id="btnPrimaryDanger" type="button" class="btn btn-primary" ng-click="Finalizar(curso)" ng-disabled="cadastrarCursoForm.$invalid">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @* Modal Gerenciar Curso *@
    <div id="modalGerenciarCurso" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="modalPrincipal" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-xl" role="document" style="width: 80% !important;">
            <div class="modal-content">
                <div class="modal-header">
                    <ul class="nav nav-pills" id="pills-tab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="disciplinaLink" ng-click="ListagemDisciplinasPorCurso(curso.ID)" aria-selected="true"
                               data-toggle="pill" href="#disciplina" aria-controls="disciplina">Disciplina e Aulas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="editarCursoLink" ng-click="AbrirItemSelecionado(curso)" aria-selected="true"
                               data-toggle="pill" href="#editarCurso" aria-controls="editarCurso">Editar Curso</a>
                        </li>
                    </ul>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>


                <div class="modal-body">

                    <div class="tab-content" id="pills-tabContent">

                        <div class="tab-pane fade" id="disciplina" role="tabpanel" aria-labelledby="disciplina">
                            <div class="row">
                                <div class="col-12">
                                    <h5 class="text-center"><strong>Disciplinas do Curso: {{curso.NOME}}</strong></h5>
                                </div>

                                <div class="col-12">
                                    <table id="DtResult" datatable="ng" dt-options="ctrl.dtOptionsModalDisciplinas"
                                           class="table table-hover dataTable"
                                           style="margin: 1px; font-size: 11px !important; display: table;" role="grid">
                                        <thead>
                                            <tr>
                                                <th class="text-center" style="width:10% !important">Prioridade</th>
                                                <th class="text-center">Nome</th>
                                                <th class="text-center" style="width:10% !important">Status</th>
                                                <th class="text-center" style="width:150px !important">Ações</th>

                                            </tr>
                                        </thead>

                                        <tbody>
                                            <tr ng-repeat="item in TabelaDisciplinasPorCurso" ng-click="ListarAulasPorDisciplina(item)">
                                                <td class="text-center">{{item.PRIORIDADE}}</td>
                                                <td class="text-center">{{item.NOME}}</td>
                                                <td class="text-center">
                                                    <button id="btnStatus" type="button" ng-class="botaoClass(item.STATUS)" ng-click="AlterarStatusDisciplina(item)" title="Alterar 
                                                            "><i class="fas fa-check"></i></button>

                                                </td>
                                                <td class="text-center">
                                                    <button id="btnPrimaryDanger" class="btn btn-primary btn-sm" ng-click="AbrirModalAdicionarAula(item.ID)" title="Adicionar Aula"><i class="fas fa-plus"></i></button>
                                                    <button id="btnPrimaryDanger" class="btn btn-warning btn-sm" ng-click="EditarDisciplina(item)" title="Editar Disciplina"><i class="fas fa-cog"></i></button>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </div>

