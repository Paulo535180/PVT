                                <div class="modal-footer">
                                    <button id="btnPrimaryDanger" type="button" class="btn btn-danger btn-sm" ng-click="FechaModal('modalGerenciarCurso')">Fechar</button>
                                    <button id="btnPrimaryDanger" type="button" class="btn btn-primary" ng-click="Finalizar(curso)" ng-disabled="editarCursoForm.$invalid">Salvar</button>
                                </div>
                            </form>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

