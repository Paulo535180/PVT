                                                            <div class="form-group">
                                                                <label for="recipient-name" class="col-form-label">Tipo de Aula:</label>
                                                                <select class="form-control" ng-model="aula.ID_TIPO_AULA" ng-options="item.ID as item.NOME for item in TiposDeAula" ng-required="true">
                                                                    <option value="">Selecione um Tipo de aula</option>
                                                                </select>
                                                            </div>
                                                        </div>


                                                        @* Tipo de Texto na Aula *@
                                                        <div class="col-12" ng-show="aula.ID_TIPO_AULA == 5">
                                                            <div class="form-group">
                                                                <label for="message-text" class="col-form-label">Texto da Aula:</label>
                                                                <textarea class="form-control" id="message-text" name="textoAula" ng-model="aula.TEXTO" ng-required="true"></textarea>
                                                                <div ng-show="editarAulaForm.textoAula.$error.required && editarAulaForm.textoAula.$dirty" class="alert alert-danger">Campo obrigatório!</div>
                                                                <div ng-show="editarAulaForm.textoAula.$error.minlength" class="alert alert-danger">Este campo precisa de no mínimo 10 caracteres</div>
                                                            </div>
                                                        </div>
                                                        @* Tipo de aula Video *@
                                                        <div class="col-12" ng-show="aula.ID_TIPO_AULA == 6">
                                                            <div class="form-group">
                                                                <label for="message-text" class="col-form-label">Link do Video:</label>
                                                                <textarea class="form-control" name="linkAula" id="message-text" ng-model="aula.VIDEO" ng-required="true"></textarea>
