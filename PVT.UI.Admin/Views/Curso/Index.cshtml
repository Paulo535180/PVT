                                                                       ng-model="aula.NOME" ng-required="true" ng-minlength="3">
                                                                <div ng-show="editarAulaForm.nomeAula.$error.required && editarAulaForm.nomeAula.$dirty" class="alert alert-danger">
                                                                    Campo obrigatório!
                                                                </div>
                                                                <div ng-show="editarAulaForm.nomeAula.$error.minlength" class="alert alert-danger">
                                                                    Este campo precisa de no mínimo 3 caracteres
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-12">
                                                            <div class="form-group">
                                                                <label for="message-text" class="col-form-label">Descrição:</label>
                                                                <textarea class="form-control" name="descricaoAula" id="message-text" ng-model="aula.DESCRICAO" ng-required="true" ng-minlength="10"></textarea>
                                                                <div ng-show="editarAulaForm.descricaoAula.$error.required && editarAulaForm.descricaoAula.$dirty" class="alert alert-danger">
                                                                    Campo obrigatório!
                                                                </div>
                                                                <div ng-show="editarAulaForm.descricaoAula.$error.minlength" class="alert alert-danger">
                                                                    Este campo precisa de no mínimo 10 caracteres
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-4">
                                                            <div class="form-group">
                                                                <label for="recipient-name" class="col-form-label">Ordem da Aula:</label>
                                                                <input type="number" class="form-control" name="ordemAula" id="recipient-name" ng-model="aula.ORDEM_AULA" ng-required="true" min="1">
                                                                <div ng-show="editarAulaForm.ordemAula.$error.required && editarAulaForm.ordemAula.$dirty" class="alert alert-danger">Campo Obrigatório</div>
