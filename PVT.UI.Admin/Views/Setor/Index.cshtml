@{
    ViewBag.Title = "Setores";

}
<div class="page-header justify-content">
    <h3>@ViewBag.Title</h3>
    <button class="btn btn-primary">Cadastrar Setor</button>
</div>


<div class="row layout-top-spacing" ng-controller="setor">
    <div class="container-fluid">
        <div class="card border-double">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-12"><form><input class="form-control" placeholder="Pesquisar" ng-model="filtro" /></form></div>
                </div>
                <table class="table table-dark" width="100%" ng-init="Listagem()">
                    <thead>
                        <tr>
                            <th class="text-center">Nome</th>
                            <th class="text-center">Descricao</th>
                            <th class="text-center">Data Criacão</th>
                            <th class="text-center">Usuario Criação</th>
                            <th class="text-center">Ativo?</th>
                            <th class="text-center">Ações</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="item in ListagemSetores | filter: filtro">

                            <td class="text-center">{{item.NOME}}</td>
                            <td class="text-center">{{item.DESCRICAO}}</td>
                            <td class="text-center">{{item.DATA_CRIACAO}}</td>
                            <td class="text-center">{{item.USUARIO_CRIACAO}}</td>
                            <td class="text-center">
                                {{item.STATUS}}
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="gridCheck">
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">
                                <ul class="table-controls">
                                    @* Modal de Edição *@
                                    <li>
                                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalEdicao">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 text-success"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                                            Editar
                                        </button>
                                        <div class="modal fade" id="modalEdicao" tabindex="-1" role="dialog" aria-labelledby="modalEdicaoLabel" aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">Nova mensagem</h5>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form>
                                                            <div class="form-group">
                                                                <label for="recipient-name" class="col-form-label">Destinatário:</label>
                                                                <input type="text" class="form-control" id="recipient-name">
                                                            </div>
                                                            <div class="form-group">
                                                                <label for="message-text" class="col-form-label">Mensagem:</label>
                                                                <textarea class="form-control" id="message-text"></textarea>
                                                            </div>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                                                        <button type="button" class="btn btn-primary">Enviar</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/bootstrap/js/bootstrap.min.js">
    $('#modalEdiçao').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) // Botão que acionou o modal
        var recipient = button.data('whatever') // Extrai informação dos atributos data-*
        // Se necessário, você pode iniciar uma requisição AJAX aqui e, então, fazer a atualização em um callback.
        // Atualiza o conteúdo do modal. Nós vamos usar jQuery, aqui. No entanto, você poderia usar uma biblioteca de data binding ou outros métodos.
        var modal = $(this)
        modal.find('.modal-title').text('Nova mensagem para ' + recipient)
        modal.find('.modal-body input').val(recipient)
    })
</script>
@section ScriptSectionRender {
    <script src="~/app/controllers/setor.controller.js">
    </script>
}

